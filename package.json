{
  "name": "mapperx-ts",
  "version": "1.1.0",
  "description": "Type-safe and lightweight data mapper for transforming API DTOs into domain/UI models in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "npx ts-node examples/examples.ts", 
    "test": "vitest",
    "test:run": "vitest run",
 

    "publish:public": "npm publish --access public ./dist",
    "publish:beta": "npm publish --tag beta ./dist",
    "publish:next": "npm publish --tag next ./dist",

    "ver:patch": "npm version patch",
    "ver:minor": "npm version minor",
    "ver:major": "npm version major",
    "ver:set": "npm version", 
    "ver:patch:no-git": "npm version patch --no-git-tag-version",
    "ver:minor:no-git": "npm version minor --no-git-tag-version",
    "ver:major:no-git": "npm version major --no-git-tag-version",

    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mapper",
    "typescript",
    "dto",
    "transform",
    "validator",
    "type-safe",
    "data-mapper",
    "api-mapper",
    "schema-mapper",
    "domain-mapper"
  ],
  "author": "SENGUANA WISUMA EMILIO YANKUAM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/senguanasoft/mapperx-ts.git"
  },
  "bugs": {
    "url": "https://github.com/senguanasoft/mapperx-ts/issues"
  },
  "homepage": "https://github.com/senguanasoft/mapperx-ts#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  }
}